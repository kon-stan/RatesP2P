<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutUnderline">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorError">@color/orange</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/color_input_layout_underline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="android:textColorHint">@color/yellow</item>
        <item name="android:theme">@style/TextInputLayoutUnderline</item>
    </style>
</resources>